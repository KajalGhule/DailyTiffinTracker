@model List<TodayMealDto>

<h3>📋 Today's Tiffin Records</h3>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Meal Type</th>
                <th>Received</th> 
                <th>Remarks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StudentName</td>
                    <td>@item.MealType</td>
                    <td> 
                       @if (item.Received == true) 
                        { 
                            <span class="text-success">✔ Received</span> 
                       } 
                        else 
                         {
                             <span class="text-danger">✘ Not Received</span> 
                         } 
                     </td> 
                     <td>@item.Remarks</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No tiffin records found for today.</p>
}
