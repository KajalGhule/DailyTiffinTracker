@{
    ViewData["Title"] = "🍽️ Add Today’s Meal";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 bg-light">
        <div class="card-body p-5">

            <h2 class="mb-4 text-success text-center">
                <i class="bi bi-clipboard-plus"></i> @ViewData["Title"]
            </h2>

            <form asp-action="AddTodayMeal" method="post" class="needs-validation" novalidate>
                <div class="row g-3 align-items-center justify-content-center">
                    <!-- Meal Type -->
                    <div class="col-md-6">
                        <label for="mealType" class="form-label fw-semibold">🍴 Select Meal Type</label>
                        <select class="form-select shadow-sm" id="mealType" name="mealType" required>
                            <option value="">-- Choose --</option>
                            <option value="Breakfast">Breakfast</option>
                            <option value="AfternoonTiffin">Afternoon Tiffin</option>
                            <option value="EveningTiffin">Evening Tiffin</option>
                        </select>

                        <div class="invalid-feedback">Please select a meal type.</div>
                    </div>

                    <!-- Submit Button -->
                    <div class="col-md-4 d-grid mt-4">
                        <button type="submit" class="btn btn-success btn-lg shadow">
                            <i class="bi bi-check-circle"></i> Submit Meal
                        </button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
