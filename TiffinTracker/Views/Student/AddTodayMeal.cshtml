@{
    ViewData["Title"] = "Add Today’s Meal";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddTodayMeal" method="post">
    <div class="form-group">
        <label for="mealType">Meal Type</label>
        <select class="form-control" id="mealType" name="mealType" required>
            <option value="">-- Select Meal --</option>
            <option value="Breakfast">Breakfast</option>
            <option value="Tiffin">Tiffin</option>
        </select>
    </div>

    <div class="form-group">
        <label>
            <input type="checkbox" id="received" name="received" value="true" />
            Meal Received
        </label>
    </div>

    <div class="form-group">
        <label for="remarks">Remarks <small>(allowed only if received)</small></label>
        <textarea class="form-control" id="remarks" name="remarks" disabled></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Meal</button>
</form>

@section Scripts {
    <script>
        const receivedCheckbox = document.getElementById("received");
        const remarksBox = document.getElementById("remarks");

        receivedCheckbox.addEventListener("change", function () {
            if (this.checked) {
                remarksBox.disabled = false;
            } else {
                remarksBox.disabled = true;
                remarksBox.value = '';
            }
        });
    </script>
}
